<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/recipe_card_gradient_overlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bookmarkIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_bookmark_added"
            android:contentDescription="Bookmark Icon"
            android:layout_gravity="end"
            android:padding="8dp" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Chef Name -->
        <TextView
            android:id="@+id/chefTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chef: Chef Name"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Category -->
        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: Category Name"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Duration -->
        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: Time"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Ingredients -->
        <TextView
            android:id="@+id/ingredientsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/ingredientsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredient list"
            android:paddingBottom="16dp" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/instructionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/instructionsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions list"
            android:paddingBottom="16dp" />
    </LinearLayout>
</ScrollView>
